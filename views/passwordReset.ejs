<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password | CMD</title>
    <link rel="stylesheet" href="/style/css/forgot.css">
    <style>
        *,
        html,
        body {
            padding: 0;
            margin: 0;
        }
    </style>
</head>

<body>
    <div class="container">
        <header>
            <div class="logo">
                <img src="/assets/logo.png" alt="" width="20%"><span>Code Snippet Manager</span>
            </div>
        </header>
        <div class="inputs">
            <h2>Password Reset</h2>
            <form action="" method="post">
                <span>
                    <label for="email">New Password <sup>*</sup></label>
                    <input type="password" name="newPassword" id="newPassword" placeholder="Enter Your Email... "
                        required>
                </span>
                <span>
                    <label for="email">Confirm Password <sup>*</sup></label>
                    <input type="password" id="confirmPassword" placeholder="Enter Your Email... " required>
                </span>
                <button type="submit" id="btn">Submit</button>
            </form>
        </div>
        <div class="banner">
            <img src="https://miro.medium.com/v2/resize:fit:720/format:webp/0*w254vygzRRtXaJwG"
                alt="Banner | codewithajoydas" width="100%">
        </div>
    </div>
    <script>
        let btn = document.getElementById("btn");

        btn.addEventListener("click", (e) => {
            e.preventDefault();

            const cPass = document.getElementById("confirmPassword").value.trim();
            const nPass = document.getElementById("newPassword").value.trim();

            if (!cPass || !nPass) {
                alert("Please fill in both fields!");
                return;
            }

            if (cPass !== nPass) {
                alert("Password Not Matched!");
                return;
            }

            console.log("Passwords match:", cPass);

            btn.disabled = true;
            btn.textContent = "Submitting...";

            const form = e.target.closest("form");
            if (form) {
                form.submit();
            } else {
                console.error("No form found!");
            }
        });


    </script>
</body>

</html>